{
	"name": "boilerplate-sveltekit",
	"version": "0.0.1",
	"type": "module",
	"description": "A boilerplate for building SvelteKit apps with TypeScript, TailwindCSS, i18next, Skeleton and Playwright",
	"main": "svelte.config.js",
	"license": "MIT",
	"scripts": {
		"start": "vite dev --open",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"test:unit": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint ./src/ --fix"
	},
	"dependencies": {
		"@tuentyfaiv/http": "^0.1.9",
		"@tuentyfaiv/svelte-modal": "^0.0.4",
		"date-fns": "^2.30.0",
		"i18next": "^23.4.6",
		"i18next-browser-languagedetector": "^7.1.0",
		"i18next-http-backend": "^2.2.1",
		"svelte-i18next": "^2.0.0",
		"sweetalert": "^2.1.2",
		"yup": "^1.2.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.1",
		"@skeletonlabs/skeleton": "1.12.0",
		"@skeletonlabs/tw-plugin": "0.0.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "1.23.0",
		"@tailwindcss/forms": "^0.5.5",
		"@tailwindcss/typography": "^0.5.9",
		"@types/node": "^20.5.7",
		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"@typescript-eslint/parser": "^6.5.0",
		"autoprefixer": "^10.4.15",
		"eslint": "^8.48.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-plugin-svelte": "^2.33.0",
		"postcss": "^8.4.28",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"svelte-preprocess": "^5.0.4",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vite-plugin-tailwind-purgecss": "^0.1.3",
		"vitest": "^0.34.3"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/TuentyFaiv/BoilerplateSveltekit.git"
	},
	"keywords": [
		"svelte",
		"sveltekit"
	],
	"author": "Tonalli <contact@tuentyfaiv.com>",
	"bugs": {
		"url": "https://github.com/TuentyFaiv/BoilerplateSveltekit/issues"
	},
	"homepage": "https://github.com/TuentyFaiv/BoilerplateSveltekit#readme"
}